@model List<ChoiceSellSystems.Entity.ViewModels.WMKategoriler>
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">ÜRÜN EKLE <button class="btn btn-success" data-toggle="modal" data-target="#Comar"><i class="fa fa-paw"></i> Çomar Yardım</button></h1>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">

                <div class="col-md-6">
                    <img src="" class="img-responsive" id="Goster" />
                </div>

                <div class="col-md-6">
                    <form role="form" method="post">

                        <div class="form-group">
                            <label>Kategori Adı</label>
                            <select class="form-control" name="Kategori">
                             @{ 
                                 foreach (var item in Model)
                                 {
                                     <option>@item.KategoriAdi</option>
                                 }
                             }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Alt Kategori Adı</label>
                            <select class="form-control" name="AltKategori">
                                @{
                                    foreach (var item in (List<ChoiceSellSystems.Entity.ViewModels.WMUrunKategorileri>)ViewBag.UrunKategori)
                                    {
                                        <option>@item.UrunKategoriAdı</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Ürün Cinsi</label>
                            <select class="form-control" name="UrunCinsi">
                                <option>Ürün Cinsi Yok</option>
                                @{
                                    foreach (var item in (List<ChoiceSellSystems.Entity.ViewModels.WMUrunCinsleri>)ViewBag.UrunCinsi)
                                    {
                                        <option>@item.Cinsi</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Ürün Adı</label>
                            <input class="form-control" name="UrunAdi">
                        </div>

                        <div class="form-group">
                            <label>Ürün Fiyatı</label>
                            <input class="form-control" name="UrunFiyati">
                        </div>

                        <div class="form-group">
                            <label>İndirimli Fiyatı</label>
                            <input class="form-control" name="Indirim">
                        </div>

                        <div class="form-group">
                            <label>Gramaj</label>
                            <input class="form-control" name="Gramaj">
                        </div>

                        <div class="form-group">
                            <label>Ürün Açıklaması</label>
                            <textarea class="form-control" rows="3" name="UrunAciklama"></textarea>
                        </div>

                        <div class="form-group">
                            <label>Resim Dosyası</label>
                            <input type="file" name="Image" onclick="Resim()" id="Im">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">ÜRÜNÜ EKLE</button>
                        </div>

                    </form>
                </div>
                <br />
            </div>
            <div class="modal fade" id="Comar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title" id="myModalLabel">ÇOMAR AI V.1.2 (ALPHA)</h4>
                        </div>
                        <div class="modal-body">
                            <div class="panel panel-green">
                                <div class="panel-heading">
                                    ÇOMAR YARDIM
                                </div>
                                <div class="panel-body">
                                    <p>
                                        Merhaba! Ben SiteRobotu Çomar. Bu sayfadan Ürün Ekleyebilirsiniz. <strong>Ürün Eklemek İçin Önce
                                        Eklenecek Ürünle İlgili Bir Kategori Olması Gerekir. Kategoriden Sonra Bir Alt Kategori Olması
                                        Gerekir. Ürünün Cinsine Görede Bir Ürün Cinsi Olması Gerekir.</strong><strong style="color:red"> 
                                        "Yavru Kedi Maması" Cinsinden Bİr Ürün Eklemek İçin Önce "Kedi" Kategorisini Oluşturmak Daha Sonra
                                        "Kedi Maması" Adlı Alt Kategoriyi Oluşturmak En sonda "Yavru Kedi Mamaları" Adlı Ürün Cinsini Oluşturmak
                                        Gerekir Bu Kategoriler Oluşturduktan Sonra "Örnek Marka" Adlı Ürün Adında Bir Ürün Eklemek Gerekir.</strong>
                                        Her Ürünün Ürün Cinsi Olmak zorunda Değildir. Ama Her Ürünün Kategorisi Ve alt Kategorisi Olmalıdır.
                                    </p>
                                </div>
                                <div class="panel-footer">
                                    Haydi şimdi Hazırsanız Ürün Ekleyelim....
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Resim() {
        var a = document.getElementById("Im").namespaceURI;
        document.getElementById("Goster").src = a;
    }
</script>