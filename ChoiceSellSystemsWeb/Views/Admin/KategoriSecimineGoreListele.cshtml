@model List<ChoiceSellSystems.Entity.ViewModels.WMUrun>
@{
    ViewBag.Title = "KategoriSecimineGoreListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header"><strong>@ViewBag.KategoriAdi/</strong>@ViewBag.UrunkategoriIsmi Göre Ürünler <button class="btn btn-success" data-toggle="modal" data-target="#Comar"><i class="fa fa-paw"></i> Çomar Yardım</button> </h1>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Kategoriye Göre Ürünler Gösterilmektedir.
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Kategorisi</th>
                                <th>Ürün Kategorisi</th>
                                <th>Ürün Cinsi</th>
                                <th>Ürün Markası</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>İndirimli Fiyatı</th>
                                <th>Gramajı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Kategorisi</td>
                                        <td>@item.UrunKategorisi</td>
                                        <td>@item.UrunCinsi</td>
                                        <td>@item.marka</td>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.UrunFiyati</td>
                                        <td>@item.Indirim</td>
                                        <td>@item.Gramaj</td>
                                        <td>
                                            <button data-toggle="modal" data-target="#myModal" class="btn btn-warning" onclick="Atama(@item.UrunID)">Sil</button>
                                            <a href="~/Admin/UrunDuzenle/@item.UrunID" class="btn btn-info">Detay</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal fade" id="Comar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">ÇOMAR AI V.1.2 (ALPHA)</h4>
                    </div>
                    <div class="modal-body">
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                ÇOMAR YARDIM
                            </div>
                            <div class="panel-body">
                                <p>
                                    Merhaba! Ben SiteRobotu Çomar. Bu sayfada Ana Kategori Altındaki Alt Kategorilere Ait
                                    Ürünler Listelenmektedir. İsterseniz Buradan Ürünün Detay Sayfasına Gidebilir Yada
                                    İsterseniz Ürünü Silebilirsiniz. Ürünün İndirim Durumunu Değiştirmek için Ana Menudeki
                                    İndirimli Yada İndirimsiz Ürünlerin Listesine Gitmeniz Yeterli.
                                </p>
                            </div>
                            <div class="panel-footer">
                                Haydi Şimdi Bir Ürünün Detayına Bakalım...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">Ürün Silme</h4>
                    </div>
                    <form role="form" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="UrunID" id="UrunID" />
                            <div class="form-group">
                                <label>Bu Ürün Silenecek Devam Edilsin mi?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-warning">SİL</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<script type="text/javascript">
    function Atama(val) {
        document.getElementById("UrunID").value = val;
    }
</script>



