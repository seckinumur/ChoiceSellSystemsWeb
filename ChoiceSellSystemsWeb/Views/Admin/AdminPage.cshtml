
@{
    ViewBag.Title = "AdminPage";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Choice Admin Control Systems V.1.4 <button class="btn btn-success" data-toggle="modal" data-target="#Comar"><i class="fa fa-paw"></i> Çomar Yardım</button></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-cart fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.TumUrunler</div>
                            <div>Tüm Ürünler</div>
                        </div>
                    </div>
                </div>
                <a href="~/Admin/TumUrunler">
                    <div class="panel-footer">
                        <span class="pull-left">Tümünü Listele</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-cart fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@ViewBag.IndirimdekiUrunler</div>
                            <div>İndirimdeki Ürünler</div>
                        </div>
                    </div>
                </div>
                <a href="~/Admin/IndirimdekiUrunler">
                    <div class="panel-footer">
                        <span class="pull-left">Tümünü Listele</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-cart fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">@((int)ViewBag.TumUrunler - (int)ViewBag.IndirimdekiUrunler)</div>
                            <div>İndirimsiz Ürünler</div>
                        </div>
                    </div>
                </div>
                <a href="~/Admin/IndirimsizUrunler">
                    <div class="panel-footer">
                        <span class="pull-left">Tümünü Listele</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        
    </div>
    <div class="modal fade" id="Comar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">ÇOMAR AI V.1.2 (ALPHA)</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            ÇOMAR YARDIM
                        </div>
                        <div class="panel-body">
                            <p>
                                Merhaba! Ben SiteRobotu Çomar. Choice Admin Control Systems V.1.4 Ana Ekrana Hoşgeldiniz.
                                Ben Temel İşlevlerde Ve Her sayfada Size Yardım Etmek İçin Varım. Gelişmiş Yardım
                                Sistemi Olarak Size Admin Panelinizi Kullanmayı ve Sitenizi Daha İyi Hale Getirmeyi
                                Öğreticem. Bir Sayfada Ne işlem Yapmanız Gerektiğinizi Bilmediğinizde Bu Butona Tıklayın.
                                Bu Ekranda Ürünlerinizin Tümüyle İlgili İşlemler, İndirimli veya İndirimsiz Ürünlerle
                                İlgili İşlemler Yapabilirsiniz. Bu Ana Ekran Ürünleriniz Mevcut Adedini. İndirimli Ve
                                İndirimsiz Ürünlerin Mevcut Adedini Görmeniz İçin Tasarlanmıştır.
                                <hr />
                                <strong>ÇOMAR AI V.1.2 (ALPHA)</strong> <br />
                                Bu Yardım Motoru Her Sayfada Bulunmaktadır. Sayfalara Özel Yardım Datası İçerir.
                                Data Ver. V.0.3 (PreAlpha)/ Geri Bildirim seckinumur@gmail.com
                            </p>
                        </div>
                        <div class="panel-footer">
                            Hazırsanız Şimdi Sitenizi Daha İyi Hale Getirelim...
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
