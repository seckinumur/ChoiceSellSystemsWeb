@model List<ChoiceSellSystems.Entity.ViewModels.WMUrun>

@{
    ViewBag.Title = "TumUrunler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tüm Ürünlerin Listesi</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Tüm Ürünler Gösterilmektedir.
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Kategorisi</th>
                                <th>Ürün Kategorisi</th>
                                <th>Ürün Cinsi</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>İndirimli Fiyatı</th>
                                <th>Gramajı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Kategorisi</td>
                                        <td>@item.UrunKategorisi</td>
                                        <td>@item.UrunCinsi</td>
                                        <td>@item.UrunAdi</td>
                                        <td>@item.UrunFiyati</td>
                                        <td>@item.Indirim</td>
                                        <td>@item.Gramaj</td>
                                        <td>
                                            <button data-toggle="modal" data-target="#myModal" class="btn btn-warning" onclick="Atama(@item.UrunID)">Sil</button>
                                            <a href="#"
                                               class="btn btn-info">
                                                Detay
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myModalLabel">Kiralama</h4>
                    </div>
                    <form role="form" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="UrunID" id="UrunID" />
                            <div class="form-group">
                                <label>Bu Ürün Silenecek Devam Edilsin mi?</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                            <button type="submit" class="btn btn-warning">SİL</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Atama(val)
    {
        document.getElementById("UrunID").value = val;
    }
</script>

